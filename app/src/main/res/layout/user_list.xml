<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp"
    app:cardCornerRadius="6dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/allcategories_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:padding="5dp">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/sample_name"
            android:scaleType="centerCrop"
            android:src="@drawable/patchappprofile" />

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/search_image"
            android:fontFamily="@font/baloo"
            android:text="@string/sample_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phonenumber"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/search_image"
            android:fontFamily="@font/baloo"
            android:text="@string/sample_address"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_useremail"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/search_image"
            android:fontFamily="@font/baloo"
            android:layout_marginTop="5dp"
            android:text="+977123456789"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_useremail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fullname"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/search_image"
            android:fontFamily="@font/baloo"
            android:textSize="13sp"
            android:textStyle="italic"
            android:text="example@gmail.com" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cat_hireme"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/baloo"
            android:text="@string/hire_us"
            android:visibility="invisible"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>